{% extends 'templates/app.twig'%}


{% block content %} 

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading">Sign in</div>
			<div class="panel-body">
				<form action="{{path_for('auth.signin')}}" method="post" autocomplete="off">
					<div class="form-group{{errors.email ? ' has-error' : '' }}">
						<div class="input-group">
							<span class="input-group-addon form-span">E-mail</span>
							<input type="text" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}" autocomplete="off">
						</div>
						{% if errors.email %}
						<span class="help-block">{{ errors.email | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{errors.password ? ' has-error' : '' }}">
						<div class="input-group">
							<span class="input-group-addon form-span">Password</span>
							<input type="password" name="password" id="password" placeholder="Enter your password" class="form-control">
						</div>
						{% if errors.password %}
						<span class="help-block">{{ errors.password | first }}</span>
						{% endif %}
					</div>
					<button type="submit" class="btn btn-default">Sign In</button>
					
					
					{{ csrf.field | raw }}
					
				</form>
			</div>
		</div>
	</div>	
	
</div>

{% endblock %}
