{% extends 'templates/app.twig'%}


{% block content %} 

<div class="row" id="signIn" >
	<div class="col-md-6 col-md-offset-3">
		<h3 class="panel-heading text-primary">Sign in</h3>
		<form action="{{path_for('auth.signin')}}" method="post" autocomplete="off">
			<div class="form-group {{errors.email ? ' has-danger' : '' }}">
					<label class="form-control-label">E-mail</label>
					<input type="text" name="email" id="email" placeholder="you@domain.com" class="form-control {{errors.email ? ' form-control-danger' : '' }}" value="{{ old.email }}" autocomplete="off">
				{% if errors.email %}
				<span class="form-control-feedback">{{ errors.email | first }}</span>
				{% endif %}
			</div>
			<div class="form-group{{errors.password ? ' has-danger' : '' }}">
					<label class="form-control-label">Password</label>
					<input type="password" name="password" id="password" placeholder="Enter your password" class="form-control {{errors.password ? ' form-control-danger' : '' }}">
				{% if errors.password %}
				<span class="form-control-feedback">{{ errors.password | first }}</span>
				{% endif %}
			</div>
			<button type="submit" class="btn btn-default">Sign In</button>
			
			
			{{ csrf.field | raw }}
			
		</form>
	</div>	
	
</div>

{% endblock %}
