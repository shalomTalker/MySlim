{% include 'templates/app.twig'%}
{% set page_title = 'admin' %}

{% block content %} 
			<div class="container-menu row">
				<div class="menu col-sm-5">
					<div class="list col-sm-6">
						<h4>Users</h4>
						<a href="{{ path_for('manage.createadmin') }}" class="btn btn-default btnAdd">
							<svg class="svg-icon align-items-sm-center" viewBox="0 0 20 20">
								<path d="M14.613,10c0,0.23-0.188,0.419-0.419,0.419H10.42v3.774c0,0.23-0.189,0.42-0.42,0.42s-0.419-0.189-0.419-0.42v-3.774H5.806c-0.23,0-0.419-0.189-0.419-0.419s0.189-0.419,0.419-0.419h3.775V5.806c0-0.23,0.189-0.419,0.419-0.419s0.42,0.189,0.42,0.419v3.775h3.774C14.425,9.581,14.613,9.77,14.613,10 M17.969,10c0,4.401-3.567,7.969-7.969,7.969c-4.402,0-7.969-3.567-7.969-7.969c0-4.402,3.567-7.969,7.969-7.969C14.401,2.031,17.969,5.598,17.969,10 M17.13,10c0-3.932-3.198-7.13-7.13-7.13S2.87,6.068,2.87,10c0,3.933,3.198,7.13,7.13,7.13S17.13,13.933,17.13,10">
								</path>
							</svg>
						</a>
						<nav class="list-group">
							{% if auth.role < 3 %}
								{% for user in auth.userslist[1:] %}
									<a href="{{ base_url() }}/admin/manage/showadmin/{{ user.id }}" class="list-group-item list-group-item-action flex-column align-items-start">
										<span>{{user.name}}, {{ user.role }}</span>
										<span>{{user.phone}}</span>
										<span>{{user.email}}</span>
									</a>
								{% endfor %}
							{% else %}
								{% for user in auth.userslist %}
									<a href="{{ base_url() }}/admin/manage/showadmin/{{ user.id }}" class="list-group-item list-group-item-action flex-column align-items-start">
										<span>{{user.name}}, {{ user.role }}</span>
										<span>{{user.phone}}</span>
										<span>{{user.email}}</span>
									</a>
								{% endfor %}
							{% endif %}
						</nav>
					</div>
				</div>
				<main>
					<div class="main ">

						{% if auth.role == 3 and not admin and adminPage %}
						<ul>
							<li>Number of users : {{ auth.userslist | length }}</li>
							
						</ul>
						{% elseif auth.role < 3 and not admin and adminPage %}
						<ul>
							<li>Number of users : {{ auth.userslist | length  - 1 }}</li>
						</ul>
						{% endif %}
						{% if not admin and auth.userslist | length == 0 %}
							<span>Your school is empty of managers try to recruit some....</span>
						{% endif %}




			
	

