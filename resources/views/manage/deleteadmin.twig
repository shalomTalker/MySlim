{% include 'admin.twig'%}
{% set page_title = 'Delete user' %}
{% block content %} 


		<div id="show" class="panel panel-default">
			<div class="panel-heading">
				<h4>Verify user deletion</h4>
			</div>
				<form class="panel-body" action="{{ base_url() }}/admin/manage/deleteadmin/{{ admin.id }}" method="post">
					<div class="form-group">
						<div class="input-group">
							<bold class="form-span">Deleting {{ admin.name }}, {{admin.id}} from department {{ admin.role }} will remove it from the database and delete all its Permissions. Are you sure of this action?</bold>
						</div>
					</div>
					<input type="submit" class="btn btn-default" value="Yes">
					<a href="{{ base_url() }}/admin/manage/editadmin/{{admin.id}}" class="btn btn-default">No</a>

					{{ csrf.field | raw }}
					
				</form>
		</div>
	</div>
 
 </div>
{% endblock %}
