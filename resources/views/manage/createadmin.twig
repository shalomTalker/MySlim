{% include 'admin.twig'%}
{% set page_title = 'Create user' %}
{% block content %} 


		<div class="panel panel-default">
			<div class="panel-heading">
				<h4>Create a new Manager / Sales</h4>
			</div>
				<form class="panel-body" action="{{path_for('manage.createadmin')}}" method="post" autocomplete="off">
					<div class="form-group{{errors.email ? ' has-error' : '' }}">
						<div class="input-group">
							<span class="input-group-addon form-span">E-mail</span>
							<input type="text" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">
						</div>
						{% if errors.email %}
						<span class="help-block">{{ errors.email | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{errors.name ? ' has-error' : '' }}">
						<div class="input-group">
							<span class="input-group-addon form-span">Name</span>
							<input type="text" name="name" id="name" placeholder="Enter your name" class="form-control" value="{{ old.name }}">
						</div>
						{% if errors.name %}
						<span class="help-block">{{ errors.name | first }}</span>
						{% endif %}
					</div>
					<div class="form-group  {{ errors.phone ? ' has-error' : '' }}">
                        <div class="input-group">
                            <span class="input-group-addon form-span">phone</span>
                            <input id="phone" name="phone" class="form-control" placeholder="enter your phone number" type="number" value="{{ old.phone }}">
                        </div>
                        {% if errors.phone %}
						<span class="help-block">{{ errors.phone | first }}</span>
						{% endif %}
                    </div>
					<div class="form-group{{errors.password ? ' has-error' : '' }}">
						<div class="input-group">
							<span class="input-group-addon form-span">Password</span>
							<input type="password" name="password" id="password" placeholder="Enter your password" class="form-control">
						</div>
						{% if errors.password %}
						<span class="help-block">{{ errors.password | first }}</span>
						{% endif %}
					</div>
					<div class="form-group{{errors.confirm_password ? ' has-error' : '' }}">
						<div class="input-group">
							<span class="input-group-addon form-span">Confirm your password</span>
							<input type="password" name="confirm_password" id="confirm_password" placeholder="Enter your password again for confirmation" class="form-control">
						</div>
						{% if errors.confirm_password %}
						<span class="help-block">{{ errors.confirm_password | first }}</span>
						{% endif %}
					</div>
                    <div class="form-group  {{ errors.role ? ' has-error' : '' }}">
                        <div class="input-group">
                        	<span class="input-group">Choose the Role-user</span>
                            <label class="radio-inline">
                                <input type="radio" name="role" value="1">Sales
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="role" value="2">Administrator
                            </label>
                        </div>
                        {% if errors.role %}
						<span class="help-block">{{ errors.role | first }}</span>
						{% endif %}
                    </div>
                    <div class="form-group{{errors.image ? ' has-error' : '' }}">
						<div class="input-group">
							<span class="input-group-addon form-span">Upload image</span>
							<input type="file" name="image" id="image" placeholder="upload user`s image" class="form-control">
						</div>
						{% if errors.image %}
						<span class="help-block">{{ errors.image | first }}</span>
						{% endif %}
					</div>

					<button type="submit" class="btn btn-default">Sign up</button>

					{{ csrf.field | raw }}
					
				</form>
		</div>
	</div>
   </main>
 
 </div>
{% endblock %}
